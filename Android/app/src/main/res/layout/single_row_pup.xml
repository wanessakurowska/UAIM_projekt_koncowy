<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewIDPup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonHistW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historia Wizyt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rasa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewIDPup" />

    <TextView
        android:id="@+id/textViewImiePup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imie"
        app:layout_constraintStart_toEndOf="@+id/textViewIDPup"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPlec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRasa" />

    <TextView
        android:id="@+id/textViewOpisPup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWiek" />

    <TextView
        android:id="@+id/textViewWiek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wiek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlec" />

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Edytuj dane"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHistW" />
</androidx.constraintlayout.widget.ConstraintLayout>