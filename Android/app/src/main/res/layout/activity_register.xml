<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">

    <EditText
        android:id="@+id/editTextLogin"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_below="@+id/editTextAdres"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:hint="Email - login"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextTel"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_below="@+id/editTextNaz"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:hint="Nr telefonu"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextAdres"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_below="@+id/editTextTel"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:hint="Id adresu"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextNaz"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_below="@+id/editTextImie"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:hint="Nazwisko"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextImie"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="0dp"
        android:hint="Imie"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@+id/editTextLogin"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:hint="Wprowadź hasło"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextPassword2"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@+id/editTextPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:hint="Powtórz hasło"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonReg"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPassword2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="147dp"
        android:textColor="@color/button_text"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="146dp"
        android:text="Zarejestruj" />
</RelativeLayout>